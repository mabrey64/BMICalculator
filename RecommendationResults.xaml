<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculator.RecommendationResults"
             Title="RecommendationResults">
    <VerticalStackLayout>
        <Label Text="Health Recommendations"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="20"/>
        
        <Label x:Name="RecommendationLabel"
               FontSize="18"
               HorizontalOptions="Center"
               Margin="20"/>
        
        <Button x:Name="ViewHealthTipsButton"
                Text="View Health Tips"
                BackgroundColor="Green"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand"
                Clicked="OnViewHealthTipsClicked"/>

        <Button x:Name="BacktoBMIResults"
                Text="Back to BMI Results"
                BackgroundColor="Gray"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand"
                Clicked="OnBackToBMIResultsClicked"/>

        <Button Text="Back to Main Page"
                BackgroundColor="Gray"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand"
                Clicked="OnBackToMainPageClicked"/>
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculator.BMIResults"
             Title="BMIResults">
    <VerticalStackLayout>
        <Label Text="BMI Results"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="20"/>
        
        <Label x:Name="ResultLabel"
               FontSize="18"
               HorizontalOptions="Center"
               Margin="20"/>
        
        <Button x:Name="ViewHealthRecommendations"
                Text="View Health Recommendation results"
                BackgroundColor="Green"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand"
                Clicked="OnRecommendedClicked"/>

        <Button Text="Back to Main Page"
                BackgroundColor="Gray"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand"
                Clicked="OnBackToMainPageClicked"/>
    </VerticalStackLayout>
</ContentPage>